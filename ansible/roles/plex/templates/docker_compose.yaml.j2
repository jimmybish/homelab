services:
  plex:
    image: lscr.io/linuxserver/plex:{{ plex_version }}
    container_name: plex
    network_mode: host
    environment:
      - TZ={{ timezone }}
      - PUID={{ docker_user_puid }}
      - PGID={{ docker_user_pgid }}
      - VERSION=docker
    volumes:
      - {{ plex_folder }}:/config
      - mytv:/tv
      - mymovies:/movies
    devices:
      - /dev/dri:/dev/dri
    restart: unless-stopped
  tautulli:
    image: ghcr.io/tautulli/tautulli
    container_name: tautulli
    restart: unless-stopped
    volumes:
      - {{ plex_tautulli_folder }}:/config
    environment:
      - PUID={{ docker_user_puid }}
      - PGID={{ docker_user_pgid }}
      - TZ={{ timezone }}
    ports:
      - {{ plex_tautulli_port }}:8181
    networks:
      - plex_net

networks:
  plex_net:
    name: plex_net

volumes:
  mytv:
    driver: local
    driver_opts:
      type: nfs
      o: "addr={{ plex_fileserver_ip}},nolock,soft,rw"
      device: ":{{ fs_media_tv }}"
  mymovies:
    driver: local
    driver_opts:
      type: nfs
      o: "addr={{ plex_fileserver_ip}},nolock,soft,rw"
      device: ":{{ fs_media_movies }}"