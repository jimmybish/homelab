## Paperless-NGX document management configuration
# make sure that your paperless container is named webserver
# make sure that your dns has a cname set for paperless

server {
    listen 443 ssl;
    listen [::]:443 ssl;

    server_name paperless.{{ internal_domain }};

    include /config/nginx/ssl.conf;

    client_max_body_size 0;

    location / {
        include /config/nginx/proxy.conf;
        include /config/nginx/resolver.conf;
        set $upstream_app {{ paperless_proxy_ip }};
        set $upstream_port {{ paperless_port }};
        set $upstream_proto http;
        proxy_pass $upstream_proto://$upstream_app:$upstream_port;
    }
}
