[defaults]
# Basic Configuration
inventory = {{ ansible_inventory_path }}
remote_user = {{ ansible_user | default('ansible') }}
host_key_checking = False
retry_files_enabled = False
gathering = smart
fact_caching = jsonfile
fact_caching_connection = /tmp/ansible_facts
fact_caching_timeout = 86400

# SSH Configuration
{% if ansible_use_sshpass | default(true) %}
ansible_ssh_executable = sshpass -d12 ssh
{% endif %}
private_key_file = {{ ansible_ssh_key_path }}
timeout = 30
transport = ssh

# Performance
forks = 10
poll_interval = 15

# Logging
log_path = /var/log/ansible.log

# Display
stdout_callback = yaml
callbacks_enabled = profile_tasks, timer

# Privilege Escalation
[privilege_escalation]
become = True
become_method = sudo
become_user = root
become_ask_pass = False

# SSH Connection
[ssh_connection]
ssh_args = -o ControlMaster=auto -o ControlPersist=60s -o StrictHostKeyChecking=no
pipelining = True
control_path = /tmp/ansible-ssh-%%h-%%p-%%r

# Colors
[colors]
highlight = white
verbose = blue
warn = bright purple
error = red
debug = dark gray
deprecate = purple
skip = cyan
unreachable = red
ok = green
changed = yellow
diff_add = green
diff_remove = red
diff_lines = cyan
